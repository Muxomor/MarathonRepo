<Page x:Class="WpfApp1.Pages.RunnerEnterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RunnerEnterPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Button Style="{StaticResource RoundedButton}" Height="40">
                <TextBlock Style="{StaticResource DefaultText}">Я участвовал ранее</TextBlock>
            </Button>
            <Button Margin="0 15 0 0" Style="{StaticResource RoundedButton}" Height="40" Click="RegRunnerBtn_Click">
                <TextBlock Style="{StaticResource DefaultText}">Я новый участник</TextBlock>
            </Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15" Width="100">
            <Button Height="35" x:Name="LoginBtn" Style="{StaticResource RoundedButton}">
                <TextBlock Style="{StaticResource SmallText}">Login</TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Page>
