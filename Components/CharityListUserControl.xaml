<UserControl x:Class="WpfApp1.Components.CharityListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Name="logoImage" Width="100" Height="100" Source="{Binding CharityLogoBit}"></Image>
            <StackPanel Width="200" Margin="2" Orientation="Vertical">
                <TextBlock Text="{Binding CharityName}" TextWrapping="Wrap"></TextBlock>
                <TextBlock TextWrapping="Wrap" Text="{Binding CharityDescription}" Margin="0 5"></TextBlock>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
